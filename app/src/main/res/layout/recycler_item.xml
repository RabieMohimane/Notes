<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <TextView
            android:text="&#64;Amine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvName"
            android:visibility="gone"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:fontFamily="@font/poppins_semibold"
            android:textColor="#3F51B5" android:textSize="30sp"/>
    <TextView
            android:text="autoroute"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/tvNote"
            android:breakStrategy="balanced"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="20dp" android:fontFamily="@font/poppins" android:textColor="#000000"
            app:layout_constraintBottom_toBottomOf="parent" android:textSize="22sp"
            android:layout_marginBottom="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/tvName" app:layout_constraintVertical_bias="0.00999999"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toStartOf="@+id/ivEdit"
            app:layout_constraintHorizontal_bias="0.0"/>
    <ImageView
            android:layout_width="44dp"
            android:layout_height="44dp"
            app:srcCompat="@drawable/ic_edit_black_24dp"
            android:id="@+id/ivEdit"
            app:layout_constraintEnd_toStartOf="@+id/ivDelete"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="@+id/tvDesignation"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"/>
    <ImageView
            android:layout_width="44dp"
            android:layout_height="44dp"
            app:srcCompat="@drawable/ic_delete_black_24dp"
            android:id="@+id/ivDelete" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>