<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <TextView
            android:text="&#64;Amine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvName"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:fontFamily="@font/poppins_semibold"
            android:textColor="#3F51B5"/>
    <TextView
            android:text="autoroute"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvDesignation"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:fontFamily="@font/poppins" android:textColor="#000000"
            app:layout_constraintBottom_toBottomOf="parent" android:textSize="16sp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/tvTitle" app:layout_constraintVertical_bias="0.0"/>
    <TextView
            android:text=" -100 dh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvPrice"
            app:layout_constraintStart_toEndOf="@+id/tvDesignation"
            android:layout_marginStart="4dp"
            android:textColor="#E62C2C" android:fontFamily="@font/poppins_bold"
            app:layout_constraintBottom_toBottomOf="parent" android:textSize="16sp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/tvTitle" app:layout_constraintVertical_bias="0.0"
            android:textStyle="bold"/>
    <TextView
            android:text="//luncheon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvTitle"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:fontFamily="@font/poppins_light" android:textColor="#E8817F7F"
            android:textSize="18sp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/tvName"/>
    <TextView
            android:text="lors du salon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvDescription" app:layout_constraintStart_toEndOf="@+id/tvPrice"
            android:layout_marginStart="4dp"
            android:breakStrategy="high_quality"
            android:textColor="#000000" android:fontFamily="@font/poppins"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toStartOf="@+id/ivEdit"
            app:layout_constraintHorizontal_bias="0.0" android:textSize="16sp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/tvTitle" app:layout_constraintVertical_bias="0.0"
            android:layout_marginBottom="4dp"/>
    <ImageView
            android:layout_width="24dp"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_edit_black_24dp"
            android:id="@+id/ivEdit"
            app:layout_constraintEnd_toStartOf="@+id/ivDelete"
            android:layout_marginEnd="8dp"
            app:layout_constraintTop_toBottomOf="@+id/tvTitle" android:layout_marginTop="8dp"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_delete_black_24dp"
            android:id="@+id/ivDelete" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/tvTitle" app:layout_constraintVertical_bias="0.0"/>

</androidx.constraintlayout.widget.ConstraintLayout>